// node {
// 	echo "build"
//     echo "test"
//     echo "integration test"
// }
pipeline {
    agent {
        docker {
            image 'maven:3.6.3'
        }
    }
    stages {
        stage("build") {
            steps {
                sh "mvn --version"
                echo "build"
            }
        }
        stage("test") {
            steps {
                echo "test"
            }
        }
        stage("integration test") {
            steps {
                echo "integration"
            }
        }
    } 
    post {
        always {
            echo "i am awesome. run always"
        }
        success {
            echo 'i run success'
        }

    }
}